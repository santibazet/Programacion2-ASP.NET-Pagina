@page
@model ObligatorioWeb.Pages.Choferes.CrearModel
@{
    ViewData["Title"] = "Crear Chofer";
}
<div class="card">
    <div class="card-header bg-dark text-white">
        <h2 class="text-white">Crear nuevo Chofer</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding: 30px">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Chofer.Ci"></label>
                    <div class="col-sm-6">
                        <input asp-for="Chofer.Ci" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Chofer.Ci" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Chofer.Nombre"></label>
                    <div class="col-sm-6">
                        <input asp-for="Chofer.Nombre" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Chofer.Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Chofer.Apellido"></label>
                    <div class="col-sm-6">
                        <input asp-for="Chofer.Apellido" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Chofer.Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Chofer.Edad"></label>
                    <div class="col-sm-6">
                        <input asp-for="Chofer.Edad" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Chofer.Edad" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 offset-sm-2">
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="submit" value="Crear" class="btn btn-dark btn-block" />
                            </div>
                            <div class="col-sm-6 text-end">
                                <a asp-page="Index" class="btn btn-secondary">Volver a la lista</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

