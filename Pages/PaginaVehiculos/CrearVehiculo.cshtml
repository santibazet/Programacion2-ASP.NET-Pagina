@page
@model ObligatorioWeb.Pages.PaginaVehiculos.CrearVehiculoModel
@{
    ViewData["Title"] = "Crear Vehículo";
}
<div class="card mb-5">
    <div class="card-header bg-dark text-white">
        <h2 class="text-white">Crear nuevo Vehículo</h2>
    </div>
    <div class="card-body">
        <form action="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="class=" container" style="padding: 30px">

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Vehiculos.CN"></label>
                    <div class="col-sm-6">
                        <input asp-for="Vehiculos.CN" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Vehiculos.CN" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Vehiculos.Matricula"></label>
                    <div class="col-sm-6">
                        <input asp-for="Vehiculos.Matricula" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Vehiculos.Matricula" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Vehiculos.Marca"></label>
                    <div class="col-sm-6">
                        <input asp-for="Vehiculos.Marca" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Vehiculos.Marca" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Vehiculos.Modelo"></label>
                    <div class="col-sm-6">
                        <input asp-for="Vehiculos.Modelo" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Vehiculos.Modelo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label font-weight-bold text-dark" asp-for="Vehiculos.Anio"></label>
                    <div class="col-sm-6">
                        <input asp-for="Vehiculos.Anio" class="form-control mb-2 text-dark" autocomplete="off" />
                        <span asp-validation-for="Vehiculos.Anio" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 offset-sm-2">
                        <div class="row">
                            <div class="col-sm-6">
                                <input type="submit" value="Crear" class="btn btn-dark btn-block" />
                            </div>
                            <div class="col-sm-6 text-end">
                                <a asp-page="IndexVehiculos" class="btn btn-secondary">Volver a la lista</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

